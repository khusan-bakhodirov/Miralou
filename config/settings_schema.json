[
  {
    "name": "theme_info",
    "theme_name": "Themekit template theme",
    "theme_version": "1.0.0",
    "theme_author": "Shopify",
    "theme_documentation_url": "https://github.com/Shopify/themekit",
    "theme_support_url": "https://github.com/Shopify/themekit/issues"
  },
  {
    "name": "Logo",
    "settings": [
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Choose the logo"
      },
      {
        "type": "range",
        "id": "logo_width",
        "min": 50,
        "max": 300,
        "step": 10,
        "default": 100,
        "unit": "px",
        "label": "logo width"
      },
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "favicon",
        "info": "favicon"
      }
    ]
  },
  {
    "name": "colors",
    "settings": [
      {
        "type": "color_scheme_group",
        "id": "color_schemes",
        "definition": [
          {
            "type": "color",
            "id": "black",
            "label": "Black",
            "default": "#000000"
          },
          {
            "type": "color_background",
            "id": "secondary_black",
            "label": "Secondary Black"
          },
          {
            "type": "color",
            "id": "main_gray",
            "label": "Main Gray",
            "default": "#626262"
          },
          {
            "type": "color",
            "id": "secondary_gray",
            "label": "Secondary Gray",
            "default": "#989898"
          },
          {
            "type": "color",
            "id": "third_gray",
            "label": "Third Gray",
            "default": "#F6F6F6"
          },
          {
            "type": "color",
            "id": "white",
            "label": "White",
            "default": "#FFFFFF"
          },
          {
            "type": "color",
            "id": "primary_green",
            "label": "Primary Green",
            "default": "#339900"
          },
          {
            "type": "color",
            "id": "primary_red",
            "label": "Primary Red",
            "default": "#EF3636"
          },
          {
            "type": "color",
            "id": "primary_yellow",
            "label": "Primary Yellow",
            "default": "#F3C449"
          }
        ],
        "role": {
          "text": "black",
          "background": {
            "solid": "white",
            "gradient": "secondary_black"
          },
          "links": "secondary_gray",
          "icons": "black",
          "primary_button": "primary_green",
          "on_primary_button": "white",
          "primary_button_border": "primary_green",
          "secondary_button": "white",
          "on_secondary_button": "secondary_gray",
          "secondary_button_border": "secondary_gray"
        }
      }, {
        "type": "color_scheme",
        "id": "active_scheme",
        "label": "choose the active scheme"
      }
    ]
  },
  {
    "name": "Social Media",
    "settings": [
      {
        "type": "text",
        "id": "instagram_url",
        "label": "Instagram URL",
        "default": "https://www.instagram.com/"
      },
      {
        "type": "text",
        "id": "facebook_url",
        "label": "Facebook URL",
        "default": "https://www.facebook.com/"
      },
      {
        "type": "text",
        "id": "twitter_url",
        "label": "Twitter URL",
        "default": "https://twitter.com/"
      },
      {
        "type": "text",
        "id": "vine_url",
        "label": "Vine URL",
        "default": "https://vine.co/"
      }
    ]
  },
  {
    "name": "Cart",
    "settings": [
      {
        "type": "select",
        "id": "cart_type",
        "label": "choose cart type",
        "options": [
          {
            "label": "default cart",
            "value": "default"
          },
          {
            "label": "drawer cart",
            "value": "drawer"
          }
        ]
      }
    ]
  },
  {
    "name": "Upsell products",
    "settings": [
      {
        "type": "product_list",
        "id": "upsell_products",
        "label": "choose products"
      }
    ]
  }
  
]
