{{'blog-card.css' |  asset_url |  stylesheet_tag}}

<div class="blog_card">
    <img class="blog_card-img" src="{{blog-item.image |  image_url }}" width="auto" height="auto" alt="">
    <div class="flex gap-1">
        <p class="paragraph-5 red uppercase">{{blog-item.created_at | date: '%B %d %Y'}}</p>
        <p class="paragraph-5 secondary-gray">by {{blog-item.author}}</p>
    </div>
    <h5 class="heading-5 uppercase">
        {{blog-item.title}}
    </h5>
    <div class="paragraph-4 secondary-gray">
        {{blog-item.content |  truncatewords: 60}}
    </div>
    <a href="{{blog-item.url}}">read more &rarr;</a>
</div>