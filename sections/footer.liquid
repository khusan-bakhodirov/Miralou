{{ 'footer.css' | asset_url | stylesheet_tag }}
<script src="{{ 'footer.js' | asset_url }}" defer></script>

<footer>
  <div class="container">
    <div class="grid-cols-4 gap-2 mb-1">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'logo' %}
            <div>
              {% if settings.logo != blank %}
                <img
                  class="footer_logo"
                  src="{{settings.logo |  image_url}}"
                  width="{{settings.logo_width}}"
                  height="24"
                  alt="logo">
              {% else %}
                <img
                  class="footer_logo"
                  src="{{'logo.png' |  asset_url}}"
                  width="{{'104'}}"
                  height="24"
                  alt="logo">

              {% endif %}
              {% if block.settings.footer_text != blank %}
                <p class="paragraph-5 white">{{block.settings.footer_text}}</p>
              {% else %}
                <p class="paragraph-5 white">Lorem ipsum dolor sit amet, <br/> consectetur adipiscing elit.</p>
              {% endif %}

              <div class="flex gap-1 footer_icons_container">
                {% render 'facebook-icon' %}
                {% render 'vinemo-icon' %}
                {% render 'instagram-icon' %}
                {% render 'twitter-icon' %}
              </div>
            </div>
          {% when 'navigation' %}
            {% assign main_menu_linklist = linklists[block.settings.menu].links %}

            <div>
              {% if block.settings.title != blank %}
                <h6 class="heading-6 red mb-1">{{ block.settings.title }}</h6>
              {% endif %}
              <ul class="flex flex-col gap-1">
                {% for link in main_menu_linklist %}
                  <li>
                    <a class='paragraph-4 white' href="{{link.url}}">{{ link.title }}</a>
                  </li>
                {% endfor %}
              </ul>
            </div>
            <div>
              <h6 class="heading-6 red mb-1">
                QUICK LINKS

              </h6>
              <ul class="flex flex-col gap-1">
                <li>
                  <a class="paragraph-4 white" href="{{routes.wishlist_url}}">Wishlist</a>
                </li>
                <li>
                  <a class="paragraph-4 white" href="{{routes.checkout_url}}">Checkout</a>
                </li>
                <li>
                  <a class="paragraph-4 white" href="{{routes.cart_url}}">Cart</a>
                </li>
              </ul>
            </div>
          {% when 'contact' %}
            <div>
              <h6 class="heading-6 red mb-1">
                {{block.settings.title}}
              </h6>
              <ul class="flex flex-col gap-1">
                <li>
                  <a class="paragraph-4 white" href="#">{{settings.address}}</a>
                </li>
                <li>
                  <a class="paragraph-4 white" href="phone:{{settings.phone_number}}">{{settings.phone_number}}</a>
                </li>
                <li>
                  <a class="paragraph-4 white" href="mailto:{{settings.email}}">{{settings.email}}</a>
                </li>
              </ul>
            </div>
        {% endcase %}
      {% endfor %}


    </div>
    <div class="line"></div>
    <div class="flex flex-between mt-1">
       <h6 class="heading-6 white">
        Copyright Â© <span id="year"></span> {{shop.name}}
       </h6>
       <h6 class="heading-6 uppercase white">All right reserved</h6>
    </div>
  </div>
</footer>

{% schema %}
  {
    "name": "Footer",
    "blocks": [
      {
        "type": "logo",
        "name": "logo",
        "settings": [
          {
            "type": "richtext",
            "id": "footer_text",
            "label": "text under logo"
          }
        ]

      }, {
        "type": "navigation",
        "name": "Navigation",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "INFORMATION"
          }, {
            "type": "link_list",
            "id": "menu",
            "label": "Navigation Menu",
            "default": "footer"
          }
        ]
      }, {
        "type": "contact",
        "name": "Contact",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "CONTACT US"
          }
        ]
      }
    ]
  }

{% endschema %}