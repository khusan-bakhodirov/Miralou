{{'login.css' |  asset_url |  stylesheet_tag}}
<script src="{{ 'login.js' | asset_url }}" defer></script>

{% render 'breadcrumbs', page-title: 'login' %}
<section class="login">
    <div class="container login_container">
        {% form 'customer_login' %}   
            <div class="login_card">
                <h4 class="heading-4 red uppercase">
                    Login into account
                </h4>
                <div class="login_input-container">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="customer[email]" placeholder="example@com">
                </div>
                <div class="login_input-container">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="customer[password]" placeholder="password">
                </div>
                <div class="login_forgot-password">
                    <a href="#recover" class="paragraph-4">forgot your password?</a>
                </div>
                <button class="button button_primary login_btn">Log in</button>
                <div class="login_signup paragraph-4">
                    <p class="">Don't have an account?</p>
                    <a href="{{routes.account_register_url}}">Sign Up</a>
                </div>
            </div>
        {% endform %}
    </div>
</section>

<section class="forgot_password hidden">
    <div class="container login_container">
        {% form 'recover_customer_password' %}   
            <div class="login_card">
                <h4 class="heading-4 red uppercase">
                    Reset your password
                </h4>
                <div class="login_input-container">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" placeholder="example@com">
                </div>
              
              
                <button class="button button_primary login_btn">Send email</button>
                <div class="login_signup paragraph-4">
                    <p class="">Back to </p>
                    <a href="{{routes.account_login_url}}">Log in</a>
                </div>
            </div>
        {% endform %}
    </div>
</section>

