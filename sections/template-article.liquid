                        <li class="paragraph-5 secondary-gray">Development</li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="article_container">
            <div class="article_container-left">
                <img src="{{article.image | image_url}}" alt="article image" class="article_img" width="auto" height="auto">
                <div class="flex gap-1">
                    <p class="paragraph-5 red uppercase">{{article.created_at | date: '%B %d %Y'}}</p>
                    <p class="paragraph-5 secondary-gray">by {{article.author}}</p>
                </div>
                <div class="paragpraph-2">
                    {{article.content}}
                </div>
                <h4 class="heading-4 uppercase">comments on {{article.title}} ({{article.comments_count}})</h4>
                <div>
                    {% for item in article.comments %}
                        <h4>{{item.author}}</h4>
                    {% endfor %}
                </div>
            {% form 'new_comment', article %}
                {{ form.errors | default_errors }}
                <div class="article_form">
                    <h4 class="heading-4 red uppercase">
                        write a comment
                    </h4>
                    <input type="email" name="comment[email]" value="{{ form.email }}" placeholder="type your email" class="article_form-input">
                    <input type="text" name="comment[author]" value="{{ form.author }}" placeholder="enter name" class="article_form-input">
                    <textarea placeholder="type here"  name="comment[body]" class="article_form-input" rows="5"> {{ form.body }}</textarea>
                    <button class="button button_secondary">Submit</button>
                </div>
            {% endform %}
            </div>
            <div class="article_container-right">
                <h6 class="heading-6 white uppercase">
                    Recent posts
                </h6>
            </div>
        </div>
     </div>
